{
    "manifest_version": 2,
    "name": "WebAnnotate",
    "version": "0.0.01",
  
    "description": "Draw and highlight on webpages.",
    "homepage_url": "https://github.com/am-matt/WebAnnotate",
    "icons": {
      "48": "icons/pen-48.png"
    },
  
    "permissions": ["<all_urls>","activeTab","tabs","scripting"],
  
    "browser_action": {
      "default_icon": "icons/pen-48.png",
      "default_title": "WebAnnotate"
    },

    "background": {
      "scripts": ["content_scripts/button.js"]
    }
  }